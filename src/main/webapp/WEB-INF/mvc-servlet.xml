    <context:component-scan base-package="com.yilin.www.spring.mvc.controller" /> 
    
    <aop:aspectj-autoproxy /> 
    
     <mvc:annotation-driven>
    	<mvc:argument-resolvers>
    		<ref bean="currentUserMethodArgumentResolver"/> 
    	</mvc:argument-resolvers> 
    </mvc:annotation-driven> 
    
    <mvc:interceptors>
    	<mvc:interceptor>
        	<mvc:mapping path="/**"/> 
